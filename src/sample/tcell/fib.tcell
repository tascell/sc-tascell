(def (fib n) (wfn int int)
  (if (<= n 2)
      (return 1)
    (begin
      (def s1 int)
      (def s2 int)
      (do-two
          (= s1 (fib (- n 1)))
        (= s2 (fib (- n 2)))
        (fib
         (:put (= (fref this n)  (- n 2)))
         (:get (= s2 (fref this r)))))
      (return (+ s1 s2)))))

