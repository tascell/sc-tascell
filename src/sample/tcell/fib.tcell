(def (fib n) (wfn long long)
  (if (<= n 2)
      (return 1)
    (begin
      (def s1 long)
      (def s2 long)
      (do-two
          (= s1 (fib (- n 1)))
	  (= s2 (fib (- n 2)))
        (handles fib
         (:put
          (%if* USE-PROBGUARD
            (= PROBABILITY (csym::my-probability (- n 2))))
          (= this.n (- n 2)))
         (:get 
         (= s2 this.r))))
      (return (+ s1 s2)))))
